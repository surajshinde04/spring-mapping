<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean class="com.jspiders.springmapping.onetomany.FatherBean"
		name="father">
		<property name="id" value="1" />
		<property name="name" value="Sajan" />
		<property name="age" value="50" />
		<property name="children">
			<list>
				<bean class="com.jspiders.springmapping.onetomany.ChildBean">
					<property name="id" value="1" />
					<property name="name" value="Suraj" />
					<property name="age" value="23" />
				</bean>
				<bean class="com.jspiders.springmapping.onetomany.ChildBean">
					<property name="id" value="2" />
					<property name="name" value="Nikhil" />
					<property name="age" value="18" />
				</bean>



			</list>
		</property>
	</bean>

</beans>
       
       